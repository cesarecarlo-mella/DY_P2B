Last[{{{1, 1, 1, -1}, {0, 0, 0, -1}, {-1, 0, 0, 0}, {0, -1, 0, 0}}, 
  {j[box, (n1_)?Positive, (n2_)?Positive, (n3_)?Positive, 
      (n4_)?NonPositive] /; True :> (n4*s23*j[box, -1 + n1, n2, n3, 1 + n4])/
      ((d - 2*n2 - 2*n3 - n4)*s12) - 
     (n4*(s13 + s23)*j[box, n1, -1 + n2, n3, 1 + n4])/
      ((d - 2*n2 - 2*n3 - n4)*s12) + 
     (n4*(s12 + s13)*j[box, n1, n2, -1 + n3, 1 + n4])/
      ((d - 2*n2 - 2*n3 - n4)*s12) - (n4*s23*j[box, n1, n2, n3, 1 + n4])/
      (d - 2*n2 - 2*n3 - n4) + (2*n1*j[box, 1 + n1, -1 + n2, n3, n4])/
      (d - 2*n2 - 2*n3 - n4)}}]
